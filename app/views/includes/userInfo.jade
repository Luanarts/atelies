ul.nav
  if (everyauth.loggedIn)
    li: a#greeting= user.name
    li: a#logout(href="/logout") Sair
  else
    li: a#loginPop.pop(href="#") Entrar
    li: a(href='/register') Cadastre-se
#loginPop-head.hide Login Title
#loginPop-content.hide
  form#popupLoginForm(action='/login', method='post')
    div
      div E-mail:
      input(type='text', name=everyauth.password.loginFormFieldName, value='', class="required email", title="Informe seu email.")
    div
      div Senha:
      input(type='password', name=everyauth.password.passwordFormFieldName, class="required", title="Informe sua senha.")
    div
      input(type='submit', class='btn-primary', value='Entrar')
:coffeescript
  $ ->
    $('.pop').popover
      html: true,
      title: -> $("##{@id}-head").html()
      content: -> $("##{@id}-content").html()
      placement: 'bottom'
      trigger: 'click'
      template: '<div class="popover" onmouseover="$(this).mouseleave(function() {$(this).hide(); });"><div class="arrow"></div><div class="popover-inner"><h3 class="popover-title"></h3><div class="popover-content"><p></p></div></div></div>'
    $('.pop').click (e) -> e.preventDefault()
