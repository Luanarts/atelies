#userInfo.nav.nav-collapse.collapse
  ul.nav
    if (everyauth.loggedIn)
      li.dropdown
        a#greeting.dropdown-toggle(href='#', data-toggle='dropdown')
          i.icon-user
          span &nbsp;#{user.name}
          b.caret
        ul.dropdown-menu
          li: a#goChangePassword(href="/account/changePassword") Troque sua senha
          li: a#goUpdateProfile(href="/account/updateProfile") Atualize seu cadastro
          li: a#logout(href="/account/logout") Sair
    else
      li: a#loginPop.pop(href="#") Entrar
      li: a(href='/account/register') Cadastre-se
  #loginPop-head.hide Fa√ßa seu login
  #loginPop-content.hide
    form#popupLoginForm(action='/account/login', method='post')
      div
        div E-mail:
        input(type='text', id="email", name='email', value='', class="required email", title="Informe seu email.")
      div
        div Senha:
        input(type='password', name=everyauth.password.passwordFormFieldName, class="required", title="Informe sua senha.")
      div
        input(type='submit', class='btn btn-primary', value='Entrar')
