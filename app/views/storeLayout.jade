extends layout

append layout
  block header
    section#main.container
      #site-banner.row(style="margin-bottom: 20px")
        .span4
          a(href="#")
            if store.banner
              img#storeBanner(src="#{store.banner}")
            else
              h1#storeNameHeader= store.name
        .span6
          h3.nameHeader shopping virtual de artes e afins
        .span2
          ul.pull-right.social
            if store.urlFacebook
              li: a(href="https://www.facebook.com/#{store.urlFacebook}", target="_blank"): img.img-circle(src="/images/facebook.png")
            if store.urlTwitter
              li: a(href="https://twitter.com/#{store.urlTwitter}", target="_blank"): img.img-circle(src="/images/twitter.png")
      .navbar
        .navbar-inner
          .container
            include includes/storeHeader
            include includes/userInfo

      block content

      block footer
        footer
          .container
            .row
              .span6
                .page-header
                  h2 Sobre #{store.name}
                p= store.description
                h3 Contato
                section#otherInfo
                  #store
                    #storeName= store.name
                    div: span#storePhoneNumber= store.phoneNumber
                    div
                      span#storeCity= store.city
                      span#storeState= store.state
                    div: a#storeOtherUrl(href="#{store.otherUrl}")= store.otherUrl
                    div: a(href="mailto:#{store.email}")= store.email
              .span3
                .page-header
                  h2 Produtos
                ul
                  li: a Categorias
                  li: a Tags
                  li: a Busca lojas
                  li: a Busca produtos
              .span3
                .page-header
                  h2 Minha conta
                ul
                  li: a Carrinho
                  li: a Troca de senha
                  li: a Pedidos

            p.text-center
              &copy; 2013 - OpenStore
              &nbsp;|&nbsp;
              a Termos de uso
              &nbsp;|&nbsp;
              a Sobre
              &nbsp;|&nbsp;
              a Contato
